.TagDetailBDelete {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(225deg, #8e96ff 0%, #6c5dd3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.TagDetailBDelete image {
  width: 20rpx;
  height: 20rpx;
}
.TagDetailList {
  height: 1500rpx;
}
.TagDetail {
  display: flex;
  align-items: center;
  margin: 20rpx;
  margin-top: 60rpx;
  padding: 40rpx;
  border-radius: 40rpx;
  background: #fafaff;
}
.TagDetail .TagDetailI {
  width: 96rpx;
  height: 96rpx;
  background: linear-gradient(180deg, #e2bdff 0%, #dbb0fd 100%);
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.TagDetail .TagDetailP text {
  width: 420rpx;
  padding-left: 40rpx;
}
.TagDetail .TagDetailP text:nth-child(1) {
  display: block;
  height: 48rpx;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: #5e6272;
  text-align: left;
  vertical-align: top;
}
.TagDetail .TagDetailP text:nth-child(2) {
  height: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: #808191;
  text-align: left;
  vertical-align: top;
}
.TagDetail .TagDetailB {
  width: 64rpx;
  height: 64rpx;
  background: #a0d7e7;
  border-radius: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.TagDetailCreatB {
  position: fixed;
  right: 20rpx;
  bottom: 80rpx;
  width: 120rpx;
  height: 120rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
}