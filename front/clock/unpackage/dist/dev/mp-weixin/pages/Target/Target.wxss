.TargetTaskPATDelete {
  width: 60rpx;
  height: 60rpx;
  background: linear-gradient(225deg, #8e96ff 0%, #6c5dd3 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
}
.TargetTaskPATDelete image {
  width: 20rpx;
  height: 20rpx;
}
.Target {
  margin: 0 20rpx 0 20rpx;
}
.TargetWords {
  margin-left: 20rpx;
  margin-top: 40rpx;
  width: 154rpx;
  height: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: #808191;
  text-align: left;
  vertical-align: top;
}
.TargetTaskButton {
  position: fixed;
  right: 20rpx;
  bottom: 80rpx;
  width: 120rpx;
  height: 120rpx;
  margin-right: 40rpx;
  margin-bottom: 40rpx;
}
.TargetTask {
  margin: 20rpx;
  margin-top: 20rpx;
  height: 224rpx;
  border-radius: 40rpx;
  background: rgba(128, 129, 145, 0.04);
}
.TargetTask .TargetTaskDetail {
  height: 100%;
  display: flex;
  align-items: center;
  /*居中对齐*/
  margin: 40rpx;
}
.TargetTask .TargetTaskDetail .TargetTaskName {
  padding-left: 40rpx;
  width: 320rpx;
}
.TargetTask .TargetTaskDetail .TargetTaskName text:nth-child(1) {
  display: block;
  height: 48rpx;
  font-size: 32rpx;
  font-weight: 700;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: #5e6272;
  text-align: left;
  vertical-align: top;
}
.TargetTask .TargetTaskDetail .TargetTaskName text:nth-child(2) {
  height: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: #808191;
  text-align: left;
  vertical-align: top;
}
.TargetTask .TargetTaskDetail .TargetTaskPAT .TargetTaskP {
  display: flex;
  width: 118rpx;
  height: 48rpx;
  opacity: 1;
  border-radius: 200rpx;
  background: #ffa2c0;
  align-items: center;
  /*居中对齐*/
  justify-content: center;
  /*居中对齐*/
}
.TargetTask .TargetTaskDetail .TargetTaskPAT .TargetTaskP view:nth-child(1) {
  width: 34rpx;
  height: 34rpx;
}
.TargetTask .TargetTaskDetail .TargetTaskPAT .TargetTaskP view:nth-child(2) {
  width: 28rpx;
  height: 32rpx;
  font-size: 22rpx;
  font-weight: 700;
  letter-spacing: 0rpx;
  line-height: 32rpx;
  color: #808191;
  text-align: left;
  vertical-align: top;
  margin-left: 20rpx;
}
.TargetTask .TargetTaskDetail .TargetTaskPAT .TargetTaskT {
  text-align: center;
  display: flex;
  align-items: center;
  /*居中对齐*/
  justify-content: center;
}
.TargetTask .TargetTaskDetail .TargetTaskPAT .TargetTaskT text {
  height: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: #808191;
  vertical-align: top;
  padding-top: 10rpx;
}