.timerTagF {
  display: flex;
  justify-content: center;
  align-items: center;
}
.timerTagF .timerTag {
  display: inline-block;
  padding-left: 20rpx;
  padding-right: 20rpx;
  margin-top: 30rpx;
  border-radius: 80rpx;
  background: #e9e9ff;
  /** 文本1 */
  font-size: 24rpx;
  font-weight: 550;
  line-height: 52rpx;
  color: #6c5dd3;
  text-align: center;
}
.timer {
  margin: 0 auto;
  margin-top: 40rpx;
  width: 654rpx;
  border-radius: 40rpx;
  background: rgba(128, 129, 145, 0.04);
}
.timer .timerImage {
  margin: 0 auto;
  padding-top: 30rpx;
  width: 480rpx;
  height: 480rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.timer .timerWork {
  padding: 30rpx 30rpx 30rpx 30rpx;
  font-weight: 600;
  color: #6c5dd3;
  font-size: 100rpx;
  text-align: center;
}
.timer .timerWords {
  margin: 0 auto;
  opacity: 1;
  /** 文本1 */
  font-size: 28rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  color: #808191;
  text-align: center;
  vertical-align: top;
}
.timer .timerButton {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 654rpx;
  height: 320rpx;
}
.timer .timerButton button {
  display: block;
  margin: 0 auto;
  width: 236rpx;
  height: 96rpx;
  border-radius: 40rpx;
  border: none;
  outline: none;
  background: #6c5dd3;
  font-weight: 700;
  letter-spacing: 0rpx;
  line-height: 96rpx;
  color: white;
  text-align: center;
}