.tagAfter {
  margin-top: 56rpx;
}
.tagAfterShort {
  display: flex;
  width: 64rpx;
  height: 64rpx;
  opacity: 1;
  border-radius: 16rpx;
  background: linear-gradient(225deg, #8e96ff 0%, #6c5dd3 100%);
  align-items: center;
  /*居中对齐*/
  justify-content: center;
  /*居中对齐*/
}
.tagAfterShort view {
  width: 48rpx;
  height: 48rpx;
}
.tagAfterShort image {
  width: 48rpx;
  height: 48rpx;
  opacity: 1;
}
.tagAfterLong {
  display: flex;
  width: 302rpx;
  height: 64rpx;
  opacity: 1;
  border-radius: 16rpx;
  background: linear-gradient(180deg, #cde7ff 0%, #c1e1ff 100%);
  align-items: center;
  /*居中对齐*/
}
.tagAfterLong .tagAfterWord {
  height: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: #6c5dd3;
  text-align: left;
  margin-left: 24rpx;
}