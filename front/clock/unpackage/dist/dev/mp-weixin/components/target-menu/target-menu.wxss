.targetMenu {
  margin: 0 auto;
  margin-top: 40rpx;
  margin-left: 40rpx;
  margin-right: 40rpx;
  border-radius: 32rpx;
  background: #fafaff;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding: 24rpx 32rpx 24rpx 32rpx;
  justify-content: space-between;
  /*两端对齐*/
}
.targetMenu .targetWord {
  height: 48rpx;
  font-size: 28rpx;
  font-weight: 600;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: #808191;
  text-align: left;
  vertical-align: top;
}
.targetMenu .targetArrow {
  width: 40rpx;
  height: 40rpx;
  opacity: 1;
  display: flex;
}
.targetMenuDetail {
  overflow: auto;
  margin: 16rpx 50rpx;
  position: absolute;
  width: 650rpx;
  max-height: 600rpx;
  border-radius: 40rpx;
  background: white;
  box-shadow: 8rpx 20rpx 40rpx 0rpx rgba(0, 0, 0, 0.06);
  z-index: 1;
}
.targetMenuDetail .targetMenuDetailD {
  display: flex;
  align-items: center;
  padding: 20rpx 40rpx 30rpx 40rpx;
}
.targetMenuDetail .targetMenuDetailD text:nth-child(1) {
  width: 350rpx;
  height: 48rpx;
  font-size: 32rpx;
  font-weight: 500;
  letter-spacing: 0rpx;
  line-height: 48rpx;
  color: #808191;
  text-align: left;
  vertical-align: top;
}
.targetMenuDetail .targetMenuDetailD .targetMenuDetailDhaiy {
  display: flex;
  align-items: center;
}
.targetMenuDetail .targetMenuDetailD .targetMenuDetailDI {
  display: flex;
  align-items: center;
  justify-content: center;
}
.targetMenuDetail .targetMenuDetailD .targetMenuDetailDI text {
  margin-right: 40rpx;
  margin-left: 6rpx;
  height: 32rpx;
  font-size: 22rpx;
  font-weight: 700;
  letter-spacing: 0rpx;
  line-height: 32rpx;
  color: #808191;
  text-align: left;
  vertical-align: top;
}
.targetMenuDetail .targetMenuDetailD text {
  height: 32rpx;
  font-size: 22rpx;
  font-weight: 700;
  letter-spacing: 0rpx;
  line-height: 32rpx;
  color: #808191;
  text-align: left;
