.points {
  width: 180rpx;
  height: 46rpx;
  position: absolute;
  right: 100rpx;
  border-radius: 45rpx;
  background: #f6f7fb;
  border: 1.8rpx solid #eef0f6;
  display: flex;
  justify-content: space-between;
  /*居中对齐*/
